{
  "name": "itkdev-docker-server",
  "version": "0.0.9",
  "description": "Docker compose server site helper",
  "bin": "dist/index.js",
  "main": "dist/index.js",
  "author": "ITKDev",
  "license": "ISC",
  "dependencies": {
    "@types/js-yaml": "^4.0.5",
    "envfile": "^6.14.0",
    "js-yaml": "^4.1.0",
    "pkg": "^5.1.0",
    "yargs": "^17.0.0"
  },
  "pkg": {
    "scripts": "dist/commands/**/*.js",
    "targets": [
      "node16-macos-x64",
      "node16-linux-x64"
    ],
    "outputPath": "."
  },
  "scripts": {
    "build": "node_modules/.bin/tsc && node_modules/.bin/pkg --targets node16-linux-x64 --output itkdev-docker-compose-server .",
    "build:macos": "node_modules/.bin/tsc && node_modules/.bin/pkg --targets node16-macos-x64 --output itkdev-docker-compose-server ."
  },
  "devDependencies": {
    "@types/node": "^17.0.33",
    "@types/yargs": "^17.0.10",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
